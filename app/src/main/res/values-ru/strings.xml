    <!-- Strings related to Settings -->
    <string name="pref_morse">Параметры генерации сигналов Морзе</string>

    <string name="pref_title_morse_high_wpm">Повышенная скорость</string>
    <string name="pref_description_morse_high_wpm">Увеличить максимальную скорость до 100 wpm, по умолчанию скорость ограничена до 50 wpm для более точной настройки.</string>

    <string name="pref_title_morse_wpm">Скорость передачи (wpm)</string>
    <string name="pref_description_morse_wpm">Скорость измеряется количеством слов в минуту (wpm), считая слово "Paris" за стандартное.</string>

    <string name="pref_title_morse_farnsworth_enabled">Увеличить межбуквенный интервал</string>
    <string name="pref_description_morse_farnsworth_enabled">Увеличенный межбуквенный (межсловный) интервал (Farnsworth spacing) облегчает изучение азбуки Морзе.</string>

    <string name="pref_title_morse_farnsworth">Увеличенный межбуквенный интервал</string>
    <string name="pref_description_morse_farnsworth">Также как и скорость передачи, межбуквенный измеряется в количестве слов в минуту. То есть, если вы поставите эту настройку на 5 wpm, интервал между буквами (как и между словами) будет таким же, как при передаче на такой скорости.</string>

    <string name="pref_title_morse_pitch">Тон (Гц)</string>
    <string name="pref_description_morse_pitch">Тон сигнала, чем выше тон — тем выше звук.</string>

    <string name="pref_title_morse_random_pitch">Случайный тон</string>
    <string name="pref_description_morse_random_pitch">Тон подбирается случайно для каждого слова.</string>

    <string name="pref_title_morse_reset">Сбросить предпочтения</string>
    <string name="pref_description_morse_reset">Сбросить предпочтения в группе "Параметры генерации сигналов Морзе"</string>

    <string name="pref_answer">Ответы</string>

    <string name="pref_title_delay_before_answer">Задержка перед произнесением ответа</string>
    <string name="pref_description_delay_before_answer">Как долго ждать перед произнесением ответа.</string>

    <string name="pref_title_delay_after_answer">Задержка после ответа</string>
    <string name="pref_description_delay_after_answer">Как долго ждать перед проигрыванием следующего сообщения.</string>

    <string name="pref_title_answer_toast">Показывать всплывающие сообщения</string>
    <string name="pref_description_answer_toast">Показывать ответы как всплывающие сообщения.</string>

